package com.ohgiraffers.section01.conditional.level03.hard1;

import java.util.Objects;
import java.util.Scanner;

public class Application2 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("과일 이름을 입력하세요 : ");
        String fruitName = scanner.next();

        if(Objects.equals(fruitName, "사과")){
            System.out.println(fruitName+"의 가격은 1000원 입니다.");
        }
        else if(Objects.equals(fruitName, "바나나")){
            System.out.println(fruitName+"의 가격은 3000원 입니다.");
        }
        else if(Objects.equals(fruitName, "복숭아")){
            System.out.println(fruitName+"의 가격은 2000원 입니다.");
        }
        else if(Objects.equals(fruitName, "키위")){
            System.out.println(fruitName+"의 가격은 5000원 입니다.");
        }
        else{
            System.out.println("준비된 상품이 없습니다.");
        }
    }
}
